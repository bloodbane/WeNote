{
  "manifest_version": 2,

  "name": "WeNote",
  "description": "This extension demonstrates a editable note online",
  "version": "0.1",
  
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.png" ,"default_popup": "login.html"
  },
    
  "options_page": "options.html",
    
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://code.jquery.com ; object-src 'self'",
  
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"  ],
    
  "web_accessible_resources": [ "jquery-1.10.2.min.map", "sidetogglemenu.js", "jquery-1.10.2.min.js", "background.js"]

}
